<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="800.0" style="-fx-background-color: #525252;" stylesheets="@buttonStyles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.adxnew.VocabController">
   <children>
      <VBox alignment="CENTER" layoutX="134.0" layoutY="149.0" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>

          <HBox alignment="CENTER" spacing="15.0">
              <Button fx:id="prevButton" prefHeight="20.0" prefWidth="71.0" style="-fx-background-color: #85ccc7;" styleClass="menu-button" text="Previous">
               <font>
                  <Font name="Bauhaus 93" size="18.0" />
               </font></Button>
              <Label fx:id="cardNumber" style="-fx-text-fill: white; -fx-font-family: 'Bauhaus 93'; -fx-font-size: 25px;" text="Card 1/2">
               <font>
                  <Font size="1.0" />
               </font></Label>
              <Button fx:id="nextButton" prefHeight="20.0" prefWidth="71.0" style="-fx-background-color: #85ccc7;" styleClass="menu-button" text="Next">
               <font>
                  <Font name="Bauhaus 93" size="18.0" />
               </font></Button>
          </HBox>

          <StackPane fx:id="cardContainer" maxWidth="500" minHeight="250" style="-fx-background-color: #3C3F41;                      -fx-background-radius: 15;                      -fx-border-color: #626262;                      -fx-border-radius: 15;                      -fx-cursor: hand;                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
            <VBox fx:id="cardFront" alignment="CENTER" prefHeight="248.0" prefWidth="642.0" spacing="10">
              <Label fx:id="frontLabel" style="-fx-font-size: 24px;                             -fx-text-fill: white;                             -fx-alignment: center;                             -fx-wrap-text: true;                             -fx-text-alignment: center;                            -fx-font-weight: bold;" text="Example Question 1" />
            </VBox>
            <VBox fx:id="cardBack" alignment="CENTER" spacing="10" visible="false">
               <Label fx:id="backLabel" alignment="CENTER" maxWidth="450" style="-fx-font-size: 24px;                             -fx-text-fill: white;                             -fx-alignment: center;                            -fx-text-alignment: center;                            -fx-wrap-text: true;" textAlignment="CENTER" wrapText="true">
                  <VBox.margin>
                     <Insets left="20.0" right="20.0" />
                  </VBox.margin>
               </Label>
            </VBox>
         </StackPane>

          <HBox alignment="CENTER" spacing="15.0">
              <Button fx:id="addButton" prefHeight="20.0" prefWidth="86.0" style="-fx-background-color: #85ccc7;" styleClass="menu-button" text="Add New">
               <font>
                  <Font name="Bauhaus 93" size="18.0" />
               </font></Button>
              <Button fx:id="deleteButton" prefHeight="20.0" prefWidth="71.0" style="-fx-background-color: #85ccc7;" styleClass="menu-button" text="Delete">
               <font>
                  <Font name="Bauhaus 93" size="18.0" />
               </font></Button>
          </HBox>
      </VBox>
      <Label alignment="CENTER" layoutX="282.0" layoutY="58.0" prefHeight="91.0" prefWidth="244.0" style="-fx-text-fill: #f7f8fa;" text="VOCABULARY" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Bauhaus 93" size="38.0" />
         </font>
      </Label>
      <Button fx:id="backButton" layoutX="350.0" layoutY="655.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="25.0" prefWidth="107.0" style="-fx-background-color: #85ccc7; -fx-background-radius: 30; -fx-text-fill: white; -fx-font-size: 18; -fx-font-family: 'Bauhaus 93';" styleClass="menu-button" text="BACK">
         <font>
            <Font size="8.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
